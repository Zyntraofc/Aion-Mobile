<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:fontFamily="@font/poppins"
    tools:context=".Login">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="184dp"
        android:layout_height="184dp"
        android:src="@drawable/logotipo_aionzyntra"
        app:layout_constraintBottom_toTopOf="@+id/crd_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_email"
        android:layout_width="390dp"
        android:layout_height="60dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:text="@string/txt_email"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="305dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_email"
                android:inputType="text"
                android:paddingBottom="12.5dp"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_senha"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crd_email">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txt_senha"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:text="@string/txt_senha"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_senha"
                android:layout_width="305dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_senha"
                android:inputType="textPassword"
                android:paddingBottom="12.5dp"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_esqueceu_senha"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/txt_esqueceuSenha"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_senha" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_entrar"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_entrar"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_esqueceu_senha" />

    <TextView
        android:id="@+id/btn_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/btn_cadastrar"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_sou_empresa" />

    <TextView
        android:id="@+id/txt_sou_empresa"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/txt_SouEmpresa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_erro_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text=""
        android:textColor="@color/dark_gray"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crd_email"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>