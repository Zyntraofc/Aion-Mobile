<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_top_background"
    tools:context=".ui.home.BottomSheetReclamacaoFragment">

    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_reclamacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/txt_reclamacao"
        android:textColor="@color/text_gray"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="22dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_reclamacao"
        app:layout_constraintTop_toBottomOf="@+id/txt_reclamacao"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/text_gray"
        android:text="10/10"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/txt_reclamacao" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_motivo_falta"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_reclamacao">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txt_label_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Motivo da Falta"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="305dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:backgroundTint="@color/light_gray"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editDescricao"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:gravity="top|start"
        android:hint="Descrição Detalhada do Problema"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_motivo_falta" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registrar"
        android:layout_width="354dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_registrar"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDescricao" />

    <TextView
        android:id="@+id/txt_Link2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/n_o_quer_confirmar_toque_aqui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registrar" />

</androidx.constraintlayout.widget.ConstraintLayout>