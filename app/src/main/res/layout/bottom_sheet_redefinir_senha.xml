<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_top_background">



    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Link2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Redefinir Senha"
        android:textColor="@color/text_gray"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/input_email_corporativo"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext_background"
        android:hint="E-mail corporativo"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="@color/text_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Link2" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_redefinir"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:elevation="0dp"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0"
        android:text="Redefinir"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/aqua_tertiary"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_email_corporativo" />



</androidx.constraintlayout.widget.ConstraintLayout>
