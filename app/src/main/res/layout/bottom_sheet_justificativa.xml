<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_top_background">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_justificar"
        android:layout_width="354dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_justificar"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/light_gray"
        android:text="Confirmo que as informações acima são verdadeiras."
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_descFalta" />

    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_gray"
        android:text="Dia 06/06"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_motivoFalta"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_data">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/txt_motivoFalta"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/txt_input"
                android:layout_marginStart="30dp"
                android:text="Motivo da Falta"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sz_input" />

            <EditText
                android:id="@+id/ptudedede"
                android:layout_width="305dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_email"
                android:inputType="text"
                android:paddingBottom="12.5dp"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_email"
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_motivoFalta">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tct"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:text="Descrição Detalhada do Motivo"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/kldededed"
                android:layout_width="305dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_email"
                android:inputType="text"
                android:paddingBottom="12.5dp"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crd_comprovante"
        android:layout_width="390dp"
        android:layout_height="170dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_email">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="354dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txt_comprovante"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:text="Comprovante (opcional)"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_import"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_descFalta"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_comprovante">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:text="Telefone Esclarecimento (opcional)"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="305dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:autofillHints=""
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_email"
                android:inputType="text"
                android:paddingBottom="12.5dp"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>