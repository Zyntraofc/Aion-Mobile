<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_top_background">

    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_gray"
        android:text="Dia 06/06"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_motivo_falta"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_data">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txt_label_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Motivo da Falta"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spinner_motivo"
                android:layout_width="305dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:backgroundTint="@color/light_gray"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_horarios"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_motivo_falta">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:contentPaddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock" />

                <EditText
                    android:id="@+id/edt_hora_entrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Hora entrada"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/light_gray" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:contentPaddingLeft="20dp"
            android:id="@+id/card_saida">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingEnd="15dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock" />

                <EditText
                    android:id="@+id/edt_hora_saida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Hora saída"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/light_gray" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_email"
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_horarios">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tct"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginStart="30dp"
                android:text="Descrição Detalhada do Motivo"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/txt_justificativa"
                android:layout_width="305dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_email"
                android:inputType="text"
                android:paddingBottom="12.5dp"
                android:textColorHint="@color/light_gray"
                android:background="@null" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:buttonTint="@color/blue_primary"
        android:text="Confirmo que as informações acima são verdadeiras."
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_email" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_justificar"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_justificar"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

</androidx.constraintlayout.widget.ConstraintLayout>