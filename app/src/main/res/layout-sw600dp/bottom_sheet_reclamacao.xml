<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_top_background"
    tools:context=".ui.home.BottomSheetReclamacaoFragment"
    android:layout_gravity="center">

    <View
        android:id="@+id/view"
        android:layout_width="280dp"
        android:layout_height="9dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_reclamacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/txt_reclamacao"
        android:textColor="@color/text_gray"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="@+id/txt_reclamacao"
        app:layout_constraintTop_toBottomOf="@+id/txt_reclamacao"
        app:srcCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/text_gray"
        android:text="10/10"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/txt_reclamacao" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_motivo_falta"
        android:layout_width="550dp"
        android:layout_height="90dp"
        android:layout_marginTop="68dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_reclamacao">

        <LinearLayout
            android:layout_width="509dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/txt_label_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:text="Motivo da Falta"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="430dp"
                android:layout_height="55dp"
                android:layout_marginStart="42dp"
                android:backgroundTint="@color/light_gray"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editDescricao"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:gravity="top|start"
        android:hint="Descrição Detalhada do Problema"
        android:inputType="textMultiLine"
        android:padding="18dp"
        android:textSize="18sp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_motivo_falta" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registrar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_registrar"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDescricao" />

    <TextView
        android:id="@+id/txt_Link2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/n_o_quer_confirmar_toque_aqui"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registrar" />

</androidx.constraintlayout.widget.ConstraintLayout>