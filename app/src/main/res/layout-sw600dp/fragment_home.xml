<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/txtBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Olá, ..."
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/layout_calendarcardview"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_nesseMes"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBemVindo">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Nesse Mês"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="35dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="500dp"
            android:layout_height="210dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp">

            <!-- Card de Faltas -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="195dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:contentPadding="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_num_falta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="42sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text=" faltas"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="12dp">

                        <ProgressBar
                            android:id="@+id/progress_faltas"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circular_progress_red" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp"
                            android:src="@drawable/ic_falta"/>

                        <TextView
                            android:id="@+id/txt_progresso_vistas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="95dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="..."
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card de Presenças -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="195dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:contentPadding="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_num_presenca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="42sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text=" presenças"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="12dp">

                        <ProgressBar
                            android:id="@+id/progress_presencas"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circular_progress_green" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp"
                            android:src="@drawable/ic_presenca" />

                        <TextView
                            android:id="@+id/txt_progresso_presenca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="95dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="..."
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_calendarcardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_nesseMes">

        <TextView
            android:id="@+id/txt_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Calendário"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="35dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/calendarCardView"
            android:layout_width="500dp"
            android:layout_height="340dp"
            android:elevation="5dp"
            android:padding="30dp"
            app:cardCornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <LinearLayout
                android:id="@+id/layout_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageButton
                        android:id="@+id/previousMonthButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/round_backgroud_buttons_calendar"
                        android:contentDescription="Mês Anterior"
                        android:elevation="3dp"
                        android:padding="14dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/voltar" />

                    <TextView
                        android:id="@+id/monthYearTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Junho de 2025"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/nextMonthButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/round_backgroud_buttons_calendar"
                        android:contentDescription="@string/desc_btnAvancar"
                        android:elevation="3dp"
                        android:padding="14dp"
                        android:rotation="180"
                        android:scaleType="fitCenter"
                        android:src="@drawable/voltar" />
                </LinearLayout>

                <View
                    android:layout_width="430dp"
                    android:layout_height="1.5dp"
                    android:layout_gravity="center"
                    android:background="#EEEEEE" />

                <LinearLayout
                    android:id="@+id/layout_dias_semana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrDomingo" />

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrSegunda" />

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrTerca" />

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrQuarta" />

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrQuinta" />

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrSexta" />

                    <TextView
                        style="@style/CalendarDayHeader"
                        android:text="@string/abrSabado" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendarRecyclerView"
                    android:layout_width="440dp"
                    android:layout_height="226dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:overScrollMode="never" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_nesseMes" />


</androidx.constraintlayout.widget.ConstraintLayout>