<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_top_background">

    <View
        android:id="@+id/view"
        android:layout_width="280dp"
        android:layout_height="9dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_gray"
        android:text="Dia 06/06"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_motivo_falta"
        android:layout_width="550dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_data">

        <LinearLayout
            android:layout_width="503dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/txt_label_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:text="Motivo da Falta"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_motivo"
                android:layout_width="430dp"
                android:layout_height="55dp"
                android:layout_marginStart="42dp"
                android:backgroundTint="@color/light_gray"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_horarios"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_motivo_falta">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:contentPaddingLeft="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="42dp"
                android:paddingTop="14dp"
                android:paddingEnd="28dp"
                android:paddingBottom="14dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_clock" />

                <EditText
                    android:id="@+id/edt_hora_entrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Hora entrada"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_saida"
            android:layout_width="29dp"
            android:layout_height="95dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:contentPaddingLeft="28dp">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="42dp"
                android:paddingTop="14dp"
                android:paddingEnd="22dp"
                android:paddingBottom="14dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_clock" />

                <EditText
                    android:id="@+id/edt_hora_saida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Hora saída"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColorHint="@color/light_gray"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_email"
        android:layout_width="550dp"
        android:layout_height="190dp"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_horarios">

        <LinearLayout
            android:layout_width="509dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/tct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:text="Descrição Detalhada do Motivo"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_justificativa"
                android:layout_width="430dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/hint_email"
                android:inputType="text"
                android:paddingBottom="18dp"
                android:textColorHint="@color/light_gray"
                android:textSize="18sp"
                android:background="@null" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_anexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crd_email">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_anexar" />

        <TextView
            android:id="@+id/txt_anexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Inserir Anexo"
            android:textColor="@color/blue_primary"
            android:textSize="19sp"
            android:fontFamily="@font/poppins_light"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:buttonTint="@color/light_gray"
        android:text="Confirmo que as informações acima são verdadeiras."
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_anexo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_justificar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_justificar"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

</androidx.constraintlayout.widget.ConstraintLayout>